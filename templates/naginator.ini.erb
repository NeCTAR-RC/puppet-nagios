[puppet]
environment=<%= @environment %>
<%- if @use_ssl -%>
ssl_cert=/var/lib/puppet/ssl/certs/<%= fqdn %>.pem
ssl_key=/var/lib/puppet/ssl/private_keys/<%= fqdn %>.pem
<%- end -%>
timeout=<%= @naginator_timeout %>

[query]
tag=<%= @environment %>

<% naginator.sort.map do |key, value| -%>
[<%= key %>]
<% value.sort.map do |key, value| -%>
<%= key %>=<%= value %>
<% end %>
<% end -%>
