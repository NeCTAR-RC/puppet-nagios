[puppet]
environment=<%= @config_environment %>
<%- if @use_ssl -%>
ssl_cert=<%= @puppet_ssldir %>/certs/<%= @fqdn %>.pem
ssl_key=<%= @puppet_ssldir %>/private_keys/<%= @fqdn %>.pem
ca_cert=<%= @puppet_ssldir %>/certs/ca.pem
<%- end -%>
timeout=<%= @naginator_timeout %>

[query]
tag=<%= @config_environment %>

<% @naginator.sort.map do |key, value| -%>
[<%= key %>]
<% value.sort.map do |key, value| -%>
<%= key %>=<%= value %>
<% end %>
<% end -%>
